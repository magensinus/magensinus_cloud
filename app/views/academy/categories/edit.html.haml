// Edit

- if params_thumb || params_cover
  = link_to "Back", edit_academy_category_path(@academy_category)
- else
  = link_to "Back", academy_categories_path

%h1 Editing academy_category

- if params_thumb
  = render "thumb", object: @academy_category
- elsif params_thumb_eml
  = render "thumb_eml", object: @academy_category
- elsif params_thumb_magestil
  = render "thumb_magestil", object: @academy_category
- elsif params_thumb_magensinus
  = render "thumb_magensinus", object: @academy_category
- elsif params_cover
  = render "cover", object: @academy_category
- elsif params_cover_eml
  = render "cover_eml", object: @academy_category
- elsif params_cover_magestil
  = render "cover_magestil", object: @academy_category
- elsif params_cover_magensinus
  = render "cover_magensinus", object: @academy_category
- else
  = render "form", object: @academy_category

= link_to "Thumb",            edit_academy_category_path(@academy_category, thumb: "true")
= link_to "Thumb Eml",        edit_academy_category_path(@academy_category, thumb_eml: "true")
= link_to "Thumb Magestil",   edit_academy_category_path(@academy_category, thumb_magestil: "true")
= link_to "Thumb Magensinus", edit_academy_category_path(@academy_category, thumb_magensinus: "true")

= link_to "Cover",            edit_academy_category_path(@academy_category, cover: "true")
= link_to "Cover Eml",        edit_academy_category_path(@academy_category, cover_eml: "true")
= link_to "Cover Magestil",   edit_academy_category_path(@academy_category, cover_magestil: "true")
= link_to "Cover Magensinus", edit_academy_category_path(@academy_category, cover_magensinus: "true")

= link_to "Show", @academy_category

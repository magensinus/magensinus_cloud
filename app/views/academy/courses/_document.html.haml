// Document

= form_with model: @academy_course, local: true do |f|
  = render "lib/components/errors", object: @academy_course
  = f.hidden_field :document, value: true
  = f.hidden_field :document_box_cache
  .field
    = f.label :document_box
    = f.file_field :document_box unless @academy_course.document_box.presence
  .field
    = f.label :document_caption
    = f.text_field :document_caption
  .actions
    = f.submit "Save"

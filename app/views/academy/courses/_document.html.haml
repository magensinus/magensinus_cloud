// Document

= form_with model: object, local: true do |f|
  = f.hidden_field :document, value: true
  = f.hidden_field :document_box_cache
  %fieldset
    = legend("Course Document")
    = errors(object)
    - if object.document_box.presence
      .form-row
        .field.col-medium-2-1
          = link_to "View File", object.document_box_url, target: :blank, class: "button extra-large white wide"
        .field.col-medium-2-1
          .checkbox
            = f.check_box :remove_document_box
            = f.label :remove_file
    .form-row
      .field
        = f.label :document
        .file
          = f.file_field :document_box, placeholder: "Upload File", id: "document_box"
          = f.label :upload_file, for: "document_box", class: "button extra-large blue wide"
    .form-row
      .form-row
        .field
          = f.label :document_caption
          .input
            = f.text_field :document_caption
    = submit_button(f, "Save")

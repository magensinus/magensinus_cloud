// Document

= form_with model: object, local: true do |f|
  = render "lib/components/errors", object: object
  = f.hidden_field :document_eml, value: true
  = f.hidden_field :document_box_eml_cache
  .field
    = f.label :document_box_eml
    = f.file_field :document_box_eml unless object.document_box_eml.presence
  .field
    = f.label :document_caption
    = f.text_field :document_caption
  .actions
    = f.submit "Save"

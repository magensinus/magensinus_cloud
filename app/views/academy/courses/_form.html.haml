// Form

= form_with model: object, local: true, html: { autocomplete: false } do |f|
  = f.hidden_field :published_at, value: DateTime.now
  %fieldset
    = legend("Course")
    = errors(object)

    .form-row
      = f.collection_radio_buttons :academy_category_id, categories, :id, :title, include_hidden: false do |b|
        .field.col-medium-2-1
          .radiobutton
            = b.radio_button
            = b.label
    .form-row
      .field
        = f.label :title
        .input
          = f.text_field :title
    .form-row
      .field
        = f.label :description
        .textarea
          = f.hidden_field :description, id: "description"
          %trix-editor{ input: "description" }
    .form-row
      .field.col-medium-3-1
        .checkbox
          = f.check_box :eml
          = f.label :eml
      .field.col-medium-3-1
        .checkbox
          = f.check_box :magestil
          = f.label :magestil
      .field.col-medium-3-1
        .checkbox
          = f.check_box :magensinus
          = f.label :magensinus

    // .form-row
    //   .field
    //     = f.label :body
    //     .textarea.body
    //       = f.hidden_field :body, id: "body"
    //       %trix-editor{ input: "body" }

    .separator.small
    .form-row
      = submit_button_misc(f, "Save")
      .field.col-medium-2-1
        .checkbox
          = f.check_box :published
          = f.label :published

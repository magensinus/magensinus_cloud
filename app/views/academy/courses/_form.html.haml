// Form

= form_with model: object, local: true, html: { autocomplete: false } do |f|
  = f.hidden_field :published_at, value: DateTime.now
  %fieldset
    = legend("Course")
    = errors(object)
    .form-row
      .field
        = f.label :title
        .input
          = f.text_field :title
    .form-row
      .field
        = f.label :description
        .textarea
          = f.hidden_field :description, id: "description"
          %trix-editor{ input: "description" }
    .form-row
      .field.col-medium-3-1
        .checkbox
          = f.check_box :eml
          = f.label :eml
      .field.col-medium-3-1
        .checkbox
          = f.check_box :magestil
          = f.label :magestil
      .field.col-medium-3-1
        .checkbox
          = f.check_box :magensinus
          = f.label :magensinus


    .form-row
      .field.col-medium-3-2
        = f.label :url
        .input
          = f.text_field :url
      .field.col-medium-3-1
        = f.label :external
        .checkbox
          = f.check_box :external
          = f.label :external

    .form-row
      .field.col-medium-2-1
        = f.label :enrollment_status_label
        .input
          = f.text_field :enrollment_status_label
      .field.col-medium-2-1
        = f.label :enrollment_status_label
        .checkbox
          = f.check_box :enrollment_status
          = f.label :enrollment_status

    .form-row
      .field.col-medium-2-1
        .checkbox
          = f.check_box :published
          = f.label :published

    // .form-row
    //   .field
    //     = f.label :body
    //     .textarea.body
    //       = f.hidden_field :body, id: "body"
    //       %trix-editor{ input: "body" }

    = submit_button(f, "Save")

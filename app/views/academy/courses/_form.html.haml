= form_for @academy_course do |f|
  = render "lib/components/errors", object: @academy_course
  .field
    = f.label :meta_title
    = f.text_field :meta_title
  .field
    = f.label :meta_description
    = f.text_area :meta_description
  .field
    = f.label :meta_image_box
    = f.text_field :meta_image_box
  .field
    = f.label :meta_url
    = f.text_field :meta_url
  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :description
    = f.text_area :description
  .field
    = f.label :draft
    = f.check_box :draft
  .field
    = f.label :published_at
    = f.datetime_select :published_at
  .field
    = f.label :eml
    = f.check_box :eml
  .field
    = f.label :magestil
    = f.check_box :magestil
  .field
    = f.label :magensinus
    = f.check_box :magensinus
  .actions
    = f.submit 'Save'

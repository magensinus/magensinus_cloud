// Icon

= form_with model: object, local: true, html: { autocomplete: false } do |f|
  = f.hidden_field :icon, value: true
  = f.hidden_field :icon_box_cache
  %fieldset
    = legend("Course Icon")
    = errors(object)
    - if object.icon_box.presence
      .form-row
        .field.col-medium-2-1
          = link_to "View File", object.icon_box_url, target: :blank, class: "button extra-large white wide"
        .field.col-medium-2-1
          .checkbox
            = f.check_box :remove_icon_box
            = f.label :remove_file
    .form-row
      .field
        = f.label :icon
        .file
          = f.file_field :icon_box, placeholder: "Upload File", id: "icon_box"
          = f.label :upload_file, for: "icon_box", class: "button extra-large blue wide"
    .form-row
      .field
        = f.label :icon_caption
        .input
          = f.text_field :icon_caption, autocomplete: false
    = submit_button(f, "Save")

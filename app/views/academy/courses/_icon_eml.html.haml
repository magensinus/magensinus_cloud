// Icon

= form_with model: object, local: true do |f|
  = render "lib/components/errors", object: object
  = f.hidden_field :icon_eml, value: true
  = f.hidden_field :icon_box_eml_cache
  .field
    = f.label :icon_box_eml
    = f.file_field :icon_box_eml unless object.icon_box_eml.presence
  - if object.icon_box_eml.presence
    .field
      = f.label :remove_icon_box_eml
      = f.check_box :remove_icon_box_eml
  .field
    = f.label :icon_caption
    = f.text_field :icon_caption
  .actions
    = f.submit "Save"

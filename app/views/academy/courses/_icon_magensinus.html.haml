// Icon

= form_with model: object, local: true do |f|
  = render "lib/components/errors", object: object
  = f.hidden_field :icon_magensinus, value: true
  = f.hidden_field :icon_box_magensinus_cache
  .field
    = f.label :icon_box_magensinus
    = f.file_field :icon_box_magensinus unless object.icon_box_magensinus.presence
  - if object.icon_box_magensinus.presence
    .field
      = f.label :remove_icon_box_magensinus
      = f.check_box :remove_icon_box_magensinus
  .field
    = f.label :icon_caption
    = f.text_field :icon_caption
  .actions
    = f.submit "Save"

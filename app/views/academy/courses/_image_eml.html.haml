// Cover

= form_with model: object, local: true do |f|
  = render "lib/components/errors", object: object
  = f.hidden_field :image_eml, value: true
  = f.hidden_field :image_box_eml_cache
  .field
    = f.label :image_box_eml
    = f.file_field :image_box_eml unless object.image_box_eml.presence
  - if object.image_box_eml.presence
    .field
      = f.label :remove_image_box_eml
      = f.check_box :remove_image_box_eml
  .field
    = f.label :image_caption
    = f.text_field :image_caption
  .actions
    = f.submit "Save"

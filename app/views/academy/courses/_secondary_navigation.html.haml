// Secondary navigation

.secondary-navigation
  .secondary-navigation-box
    .secondary-navigation-item
      %h3 Academy
    .separator.extra-small
    .secondary-navigation-item
      = link_to "Main", academy_course_path(@academy_course), class: "link large blue wide hover-underline"
    .secondary-navigation-item
      = link_to "Tutors", academy_course_path(@academy_course, tutors: "true"), class: "link large blue wide hover-underline"
    .secondary-navigation-item
      = link_to "Theme", academy_course_path(@academy_course, theme: "true"), class: "link large blue wide hover-underline"
    .secondary-navigation-item
      = link_to "Misc", academy_course_path(@academy_course, misc: "true"), class: "link large blue wide hover-underline"
    .separator.extra-small
    .secondary-navigation-item
      = link_to "Icon",                academy_course_path(@academy_course, icon: "true"), class: "link large blue wide hover-underline"
    .secondary-navigation-item
      = link_to "Thumb",                academy_course_path(@academy_course, thumb: "true"), class: "link large blue wide hover-underline"
    .secondary-navigation-item
      = link_to "Image",                academy_course_path(@academy_course, image: "true"), class: "link large blue wide hover-underline"
    .secondary-navigation-item
      = link_to "Documento",            academy_course_path(@academy_course, document: "true"), class: "link large blue wide hover-underline"
    .secondary-navigation-item
      = link_to "Video",            academy_course_path(@academy_course, video: "true"), class: "link large blue wide hover-underline"
    .separator.extra-small
    .secondary-navigation-item
      = link_to "Destroy", academy_course_path(@academy_course), method: :delete, data: { confirm: "Are you sure?" }, class: "link large red wide hover-underline"

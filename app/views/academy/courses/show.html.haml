// Show

.container-top
  .breadcrumbs
    .breadcrumbs-box
      .breadcrumbs-item
        = link_to academy_courses_path, class: "link medium gray" do
          .icon.left
            = image_tag "icons/chevron_left.png"
          Back
  = link_to "Sections", academy_course_sections_path(@academy_course), class: "button blue extra-large right"
.container-middle.left
  .board-double-extra-small
    = render partial: "secondary_navigation"
  .board-medium
    - if params_icon
      = render "icon", object: @academy_course
    - elsif params_thumb
      = render "thumb", object: @academy_course
    - elsif params_cover
      = render "cover", object: @academy_course
    - elsif params_image
      = render "image", object: @academy_course
    - elsif params_document
      = render "document", object: @academy_course
    - elsif params_video
      = render "video", object: @academy_course
    - elsif params_body
      = render "body", object: @academy_course
    - elsif params_misc
      = render "misc", object: @academy_course
    - elsif params_theme
      = render "theme", object: @academy_course
    - elsif params_tutors
      = render "tutors",object: @academy_course, categories: @academy_categories, tutors: @academy_tutors
    - else
      = render "form", object: @academy_course, categories: @academy_categories, tutors: @academy_tutors
.container-bottom.left

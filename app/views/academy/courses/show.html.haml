// Show

= link_to "Back", academy_courses_path

%p
  %b Title:
  = @academy_course.title
%p
  %b Description:
  = @academy_course.description
%p
  %b Body:
  = safe_join([@academy_course.body.html_safe]) if @academy_course.body.presence
%p
  %b Misc:
  = safe_join([@academy_course.misc.html_safe]) if @academy_course.misc.presence
-#
  %p
    %b Thumb:
    = @academy_course.thumb
  %p
    %b Thumb box:
    = image_tag @academy_course.thumb_box_url.to_s
    = image_tag @academy_course.thumb_box_url(:nano).to_s
    = image_tag @academy_course.thumb_box_url(:tiny).to_s
    = image_tag @academy_course.thumb_box_url(:small).to_s
    = image_tag @academy_course.thumb_box_url(:medium).to_s
    = image_tag @academy_course.thumb_box_url(:large).to_s
  %p
    %b Thumb caption:
    = @academy_course.thumb_caption
  %p
    %b Cover:
    = @academy_course.cover
  %p
    %b Cover box:
    = image_tag @academy_course.cover_box_url.to_s
    = image_tag @academy_course.cover_box_url(:nano).to_s
    = image_tag @academy_course.cover_box_url(:tiny).to_s
    = image_tag @academy_course.cover_box_url(:small).to_s
    = image_tag @academy_course.cover_box_url(:medium).to_s
    = image_tag @academy_course.cover_box_url(:large).to_s
  %p
    %b Cover caption:
    = @academy_course.cover_caption
%p
  %b Published:
  = @academy_course.published
%p
  %b Published at:
  = @academy_course.published_at

%p
  %b Enrollment status:
  = @academy_course.enrollment_status
%p
  %b Enrollment status label:
  = @academy_course.enrollment_status_label
%p
  %b Eml:
  = @academy_course.eml
%p
  %b Magestil:
  = @academy_course.magestil
%p
  %b Magensinus:
  = @academy_course.magensinus

%h3 Tutors

- @academy_tutors.each do |item|
  = item.tutor.name

= link_to "Edit", edit_academy_course_path(@academy_course)
= link_to "Sections", academy_course_sections_path(@academy_course)

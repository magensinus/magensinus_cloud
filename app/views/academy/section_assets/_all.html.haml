// All

.content
  .content-box.sortable{ "data-url" => sortable_academy_course_section_section_assets_path(grandparent, parent) }
    // .content-item
    //   %h3.gray-700-cl.sans.lighter= parent.title
    //   .separator.extra-small
    - objects.each do |object|
      .content-item{ id: "academy_section_asset_#{object.id}" }
        .content-top.white-bg
          = link_to "Sort Me", "#", class: "off link gray-light left handle"
          %p.small.right.auto.blue-300-cl
            %strong Type:
            = asset_type(object)
        .toggle-box.wide.left
          .content-middle.white-bg
            = assets_renderer(object)
          .content-bottom.white-bg
            = render partial: "academy/section_assets/content_nav", locals: { grandparent: grandparent, parent: parent, object: object }

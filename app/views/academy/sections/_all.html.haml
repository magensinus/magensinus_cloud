// All

%table
  %thead
    %tr
      %th Course
      %th Slug
      %th Title
      %th Published
      %th Position
      %th
      %th
      %th
  %tbody
    - objects.each do |object|
      %tr
        %td= object.course
        %td= object.slug
        %td= object.title
        %td= object.published
        %td= object.position
        %td= link_to "Show", academy_course_section_path(parent, object)
        %td= link_to "Edit", edit_academy_course_section_path(parent, object)
        %td= link_to "Destroy", academy_course_section_path(parent, object), method: :delete, data: { confirm: "Are you sure?" }

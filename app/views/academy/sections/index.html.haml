// Index

.container-top
  .breadcrumbs
    .breadcrumbs-box
      .breadcrumbs-item
        = link_to academy_course_path(@academy_course), class: "link medium gray" do
          .icon.left
            = image_tag "icons/chevron_left.png"
          Back
  = link_to "New Academy section", new_academy_course_section_path(@academy_course), class: "button green extra-large right"
.container-middle.left
  .board-medium.altai-center
    .content
      .content-box
        .content-item
          %h3.lighter Sections
    - if @academy_sections.presence
      = render "all", parent: @academy_course, objects: @academy_sections
    - else
      = blankslate
.container-bottom.left

// All

.list
  .list-box.sortable
    - objects.each do |object|
      .list-item.col-medium-2-1
        .list-middle
          .list-center.no-side
            %p
              = object.name
              = object.surname
          .list-right
            = link_to academy_tutor_path(object), class: "link medium gray pg-12" do
              .icon.left
                = image_tag "icons/arrow_forward.png"

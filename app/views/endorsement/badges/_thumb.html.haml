// Thumb

= form_with model: @endorsement_badge, local: true do |f|
  = render "lib/components/errors", object: @endorsement_badge
  = f.hidden_field :thumb, value: true
  = f.hidden_field :thumb_box_cache
  .field
    = f.label :thumb_box
    = f.file_field :thumb_box unless @endorsement_badge.thumb_box.presence
  - if @endorsement_badge.thumb_box.presence
    .field
      = f.label :remove_thumb_box
      = f.check_box :remove_thumb_box
  .field
    = f.label :thumb_caption
    = f.text_field :thumb_caption
  .actions
    = f.submit "Save"

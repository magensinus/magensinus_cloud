    = f.text_field :meta_title
  .field
    = f.label :meta_description
    = f.text_area :meta_description
  .field
    = f.label :meta_image_box
    = f.text_field :meta_image_box
  .field
    = f.label :meta_url
    = f.text_field :meta_url
  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :description
    = f.text_area :description
  .field
    = f.label :thumb
    = f.check_box :thumb
  .field
    = f.label :thumb_box
    = f.text_field :thumb_box
  .field
    = f.label :thumb_caption
    = f.text_field :thumb_caption
  .field
    = f.label :cover
    = f.check_box :cover
  .field
    = f.label :cover_box
    = f.text_field :cover_box
  .field
    = f.label :cover_caption
    = f.text_field :cover_caption
  .field
    = f.label :published
    = f.check_box :published
  .field
    = f.label :published_at
    = f.datetime_select :published_at
  .field
    = f.label :eml
    = f.check_box :eml
  .field
    = f.label :magestil
    = f.check_box :magestil
  .field
    = f.label :magensinus

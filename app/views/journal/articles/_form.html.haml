= form_with model: @journal_article, local: true do |f|
  - if @journal_article.errors.any?
    #error_explanation
      %h2= "#{pluralize(@journal_article.errors.count, "error")} prohibited this journal_article from being saved:"
      %ul
        - @journal_article.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :meta_title
    = f.text_field :meta_title
  .field
    = f.label :meta_description
    = f.text_area :meta_description
  .field
    = f.label :meta_image_box
    = f.text_field :meta_image_box
  .field
    = f.label :meta_url
    = f.text_field :meta_url
  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :description
    = f.text_area :description

  .field
    = f.label :thumb_box
    = f.hidden_field :thumb_box_cache
    - if @journal_article.thumb_box.presence
      = f.hidden_field :thumb, value: true
    - else
      = f.hidden_field :thumb, value: false
    = f.file_field :thumb_box unless @journal_article.thumb_box.presence
  - if @journal_article.thumb_box.presence
    .field
      = f.label :remove_thumb_box
      = f.check_box :remove_thumb_box
  .field
    = f.label :thumb_caption
    = f.text_field :thumb_caption

  .field
    = f.label :cover_box
    = f.hidden_field :cover_box_cache
    - if @journal_article.cover_box.presence
      = f.hidden_field :cover, value: true
    - else
      = f.hidden_field :cover, value: false
    = f.file_field :cover_box unless @journal_article.cover_box.presence
  - if @journal_article.cover_box.presence
    .field
      = f.label :remove_cover_box
      = f.check_box :remove_cover_box
  .field
    = f.label :cover_caption
    = f.text_field :cover_caption

  .field
    = f.label :published
    = f.check_box :published
  .field
    = f.label :published_at
    = f.datetime_select :published_at
  .field
    = f.label :eml
    = f.check_box :eml
  .field
    = f.label :magestil
    = f.check_box :magestil
  .field
    = f.label :magensinus
    = f.check_box :magensinus
  .actions
    = f.submit 'Save'

// Form

= form_with model: object, local: true do |f|
  = render "lib/components/errors", object: object
  = f.hidden_field :published_at, value: DateTime.now
  .field
    = f.label :title
    .input
      = f.text_field :title
  .field
    .textarea
      %trix-editor{ input: "description" }
      = f.hidden_field :description, id: "description"
  .field
    .checkbox
      = f.check_box :featured
      = f.label :featured
  .field
    .checkbox
      = f.check_box :published
      = f.label :published
  / .field
  /   = f.label :published_at
  /   = f.datetime_select :published_at
  .field
    .checkbox
      = f.check_box :eml
      = f.label :eml
  .field
    .checkbox
      = f.check_box :magestil
      = f.label :magestil
  .field
    .checkbox
      = f.check_box :magensinus
      = f.label :magensinus
  .actions
    = f.submit "Save"

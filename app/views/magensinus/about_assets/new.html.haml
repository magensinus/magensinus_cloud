// New

.container-top
  .breadcrumbs
    .breadcrumbs-box
      .breadcrumbs-item
        = link_to magensinus_about_assets_path, class: "link medium gray" do
          .icon.left
            = image_tag "chevron_left.png"
          Back

.container-middle.left
  .board-medium.altai-center
    - if params_text
      = render "text", object: @magensinus_about_asset
    - elsif params_image
      = render "image", object: @magensinus_about_asset
    - elsif params_video
      = render "video", object: @magensinus_about_asset
    - else
      = render "text", object: @magensinus_about_asset
.container-bottom.left

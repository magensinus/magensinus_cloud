// Form

= form_with model: object, local: true do |f|
  = render "lib/components/errors", object: object
  .field
    = f.label :title
    = f.text_field :title
  .field
    %trix-editor{ input: "description" }
    = f.hidden_field :description, id: "description"
  .field
    %trix-editor{ input: "body" }
    = f.hidden_field :body, id: "body"
  .field
    = f.label :fax
    = f.text_field :fax
  .field
    = f.label :phone
    = f.text_field :phone
  .field
    = f.label :email
    = f.text_field :email
  .field
    = f.label :address_one
    = f.text_field :address_one
  .field
    = f.label :address_two
    = f.text_field :address_two
  .field
    = f.label :postcode
    = f.text_field :postcode
  .field
    = f.label :city
    = f.text_field :city
  .field
    = f.label :country
    = f.text_field :country
  .actions
    = f.submit "Save"

// Form

= form_with model: object, url: magensinus_network_form_url, local: true do |f|
  = render "lib/components/errors", object: object
  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :username
    = f.text_field :username
  .field
    = f.label :url
    = f.text_field :url
  .actions
    = f.submit "Save"

// Meta tags

= form_with model: object, local: true, html: { autocomplete: false } do |f|
  %fieldset
    = legend("Magensinus Schools")
    = errors(object)
    .form-row
      .field
        = f.label :meta_title
        .input
          = f.text_field :meta_title
    .form-row
      .field
        = f.label :meta_description
        .textarea
          = f.text_area :meta_description
    .form-row
      .field
        = f.label :meta_image_box
        .input
          = f.text_field :meta_image_box
    .form-row
      .field
        = f.label :meta_url
        .input
          = f.text_field :meta_url
    = submit_button(f, "Save")

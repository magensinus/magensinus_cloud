// Form

= form_with model: object, local: true, html: { autocomplete: false } do |f|
  %fieldset
    = legend("Magensinus Settings")
    = errors(object)
    .form-row
      .field
        = f.label :title
        .input
          = f.text_field :title
    .form-row
      .field
        = f.label :description
        .textarea
          = f.text_area :description
    .form-row
      .field
        = f.label :url
        .input
          = f.text_field :url
    .form-row
      .field
        = f.label :enrollment_success
        .textarea
          = f.text_area :enrollment_success
    .form-row
      .field
        = f.label :enrollment_failure
        .textarea
          = f.text_area :enrollment_failure
    .form-row
      .field
        = f.label :enrollment_description
        .textarea
          = f.text_area :enrollment_description
    .form-row
      .field
        = f.label :newsletter_success
        .textarea
          = f.text_area :newsletter_success
    .form-row
      .field
        = f.label :newsletter_failure
        .textarea
          = f.text_area :newsletter_failure
    = submit_button(f, "Save")

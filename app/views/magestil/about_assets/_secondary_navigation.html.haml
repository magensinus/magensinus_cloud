// Secondary navigation

.secondary-navigation
  .secondary-navigation-box
    .secondary-navigation-item
      %h3 Magestil
    .separator.extra-small
    - if objects.presence
      .secondary-navigation-item
        = link_to "Toggle Content", "#", class: "off link medium blue wide hover-underline toggle-trigger"
      .separator.extra-small
    .secondary-navigation-item
      = link_to "Text", new_magestil_about_asset_path(text: "true"), class: "link medium blue wide hover-underline"
    .secondary-navigation-item
      = link_to "Image", new_magestil_about_asset_path(image: "true"), class: "link medium blue wide hover-underline"
    .secondary-navigation-item
      = link_to "Video", new_magestil_about_asset_path(video: "true"), class: "link medium blue wide hover-underline"

// Image

= form_with model: object, url: magestil_campus_asset_form_url, local: true do |f|
  = f.hidden_field :image, value: true
  = f.hidden_field :image_box_cache
  %fieldset
    = legend("Image")
    = errors(object)
    - if object.image_box.presence
      .form-row
        .field.col-medium-2-1
          = link_to "View File", object.image_box_url, target: :blank, class: "button extra-large white wide"
        .field.col-medium-2-1
          .checkbox
            = f.check_box :remove_image_box
            = f.label :remove_file
    .form-row
      .field
        = f.label :file
        .file
          = f.file_field :image_box, placeholder: "Upload File", id: "image_box"
          = f.label :upload_file, for: "image_box", class: "button extra-large blue wide"
    .form-row
      .field
        = f.label :caption
        .input
          = f.text_field :image_caption
    .separator.small
    .form-row
      .field
        .submit
          = f.button "Save", type: :submit, data: { disable_with: "Please wait a moment..." }, class: "button double-extra-large green wide"

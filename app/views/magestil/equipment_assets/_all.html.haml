// All

%table
  %thead
    %tr
      %th
      %th Position
      %th
      %th
  %tbody.sortable{ "data-url" => sortable_magestil_equipment_assets_path }
    - objects.each do |object|
      %tr{ id: "magestil_equipment_asset_#{object.id}" }
        %td= link_to "Sort Me", "#", class: "handle"
        %td
          = object.image_caption
          = object.position
        %td= link_to "Show", magestil_equipment_asset_path(object, image: true)
        %td= link_to "Destroy", magestil_equipment_asset_path(object), method: :delete, data: { confirm: "Are you sure?" }

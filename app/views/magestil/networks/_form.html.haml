// Form

= form_with model: object, url: magestil_network_form_url, local: true do |f|
  %fieldset
    = legend("#{controller_name.capitalize}")
    = errors(object)
    .form-row
      .field.col-medium-2-1
        = f.label :title
        .input
          = f.text_field :title
      .field.col-medium-2-1
        = f.label :url
        .input
          = f.text_field :url
      // .field.col-medium-2-1
      //   = f.label :username
      //   .input
      //     = f.text_field :username
    = submit_button(f, "Save")

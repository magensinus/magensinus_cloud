// Secondary navigation

.secondary-navigation
  .secondary-navigation-box
    .secondary-navigation-item
      %h3 Magestil
    .separator.extra-small
    .secondary-navigation-item
      = link_to "Main", magestil_network_path(@magestil_network), class: "link medium blue wide hover-underline"
    .secondary-navigation-item
      = link_to "Thumb", magestil_network_path(@magestil_network, thumb: "true"), class: "link medium blue wide hover-underline"
    .separator.small
    .secondary-navigation-item
      = link_to "Destroy", magestil_network_path(@magestil_network), method: :delete, data: { confirm: "Are you sure?" }, class: "link medium red wide hover-underline"

// Form

= form_with model: object, local: true do |f|
  // = render "lib/components/errors", object: object
  %fieldset
    = legend("Wallet Category")
    = errors(object)
    .form-row
      .field
        = f.label :title
        .input
          = f.text_field :title
    .form-row
      .field
        = f.label :description
        .textarea
          // %trix-editor{ input: "description" }
          // = f.hidden_field :description, id: "description"
          = f.text_area :description, id: "description"
    .form-row
      .field.col-medium-3-1
        .checkbox
          = f.check_box :eml
          = f.label :eml
      .field.col-medium-3-1
        .checkbox
          = f.check_box :magestil
          = f.label :magestil
      .field.col-medium-3-1
        .checkbox
          = f.check_box :magensinus
          = f.label :magensinus
    .form-row
      .field.col-medium-3-1
        = f.label :wallet_type
        .select
          = f.select :wallet_type, ["students", "parents", "tutors", "other"]
    .separator.small
    .form-row
      = submit_button_misc(f, "Save")
      .field.col-medium-2-1
        .checkbox
          = f.check_box :published
          = f.label :published

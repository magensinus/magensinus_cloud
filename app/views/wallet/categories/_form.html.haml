// Form

= form_with model: object, class: "col-large-1-1", local: true do |f|
  // = render "lib/components/errors", object: object
  %fieldset
    .form-row
      .field
        = f.label :title
        .input
          = f.text_field :title
    .form-row
      .field
        = f.label :description
        .textarea
          // %trix-editor{ input: "description" }
          // = f.hidden_field :description, id: "description"
          = f.text_area :description, id: "description"
    .form-row
      .field.col-large-3-1
        .checkbox
          = f.check_box :eml, id: :eml
          = f.label "Escola de Moda de Lisboa", for: :eml
      .field.col-large-3-1
        .checkbox
          = f.check_box :magestil, id: :magestil
          = f.label :magestil, for: :magestil
      .field.col-large-3-1
        .checkbox
          = f.check_box :magensinus, id: :magensinus
          = f.label :magensinus, for: :magensinus
    .form-row
      .field.col-large-3-1
        = f.label :wallet_type
        .select
          = f.select :wallet_type, ["students", "parents", "tutors", "other"]
    .form-row
      .field.col-large-3-1
        .submit.col-large-3-1
          = f.button "Save", data: { disable_with: "Saving..." }, class: "button wide extra-large green"
      .field.right.col-large-3-1
        .checkbox.yellow-500-bg
          = f.check_box :published, id: :published
          = f.label :published, for: :published, class: "yellow-900-cl"

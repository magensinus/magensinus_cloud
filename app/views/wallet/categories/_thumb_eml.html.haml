// Thumb

= form_with model: object, local: true do |f|
  = render "lib/components/errors", object: object
  = f.hidden_field :thumb_eml, value: true
  = f.hidden_field :thumb_box_eml_cache
  .field
    = f.label :thumb_box_eml
    = f.file_field :thumb_box_eml unless object.thumb_box_eml.presence
  - if object.thumb_box_eml.presence
    .field
      = f.label :remove_thumb_box_eml
      = f.check_box :remove_thumb_box_eml
  .field
    = f.label :thumb_caption
    = f.text_field :thumb_caption
  .actions
    = f.submit "Save"
